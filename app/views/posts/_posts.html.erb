<ul class="list-unstyled">
  <% posts.each do |post| %>
    <li class="media mb-3">
      <div class="row">
        <div class="col-sm-3">
          <% if post.user.image? %>
            <%= image_tag post.user.image.url, :size => '100x100', class: 'img-fluid' %>
          <% else %>
            <%= image_tag '/assets/default_image.png', :size => '100x100', class: 'img-fluid' %>
          <% end %>
        </div>
        <div class="media-body col-sm-9">
          <div><%= link_to post.user.name, user_path(post.user) %><span class="text-muted"> posted at <%= post.created_at %></span></div>
          <div><p><%= image_tag post.image.url, class: 'img-fluid'  if post.image? %></p></div>
          <div><p><%= post.content %></p></div>
          <div>
            <% if current_user == post.user %>
              <%= link_to 'Delete', post, method: :delete, data: { confirm: 'You sure?'}, class: 'btn btn-danger btn-sm' %>
            <% end %>
          </div>
        </div>
        
      </div>
    </li>
  <% end %>
  <%= paginate posts %>
</ul>