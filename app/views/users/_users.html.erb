<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <% if user.image? %>
          <%= image_tag user.image.url, class: 'img-fluid' %>
        <% else %>
          <img class="mr-2 rounded" src="<%= gravatar_url(user, { size:50 }) %>" alt="">
        <% end %>
         
        <div class="media-body">
          <div><%= user.name %></div>
          <div>
            <p><%= link_to 'Profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>