<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <% if @user.image? %>
          <%= image_tag @user.image.url %>
        <% else %>
          <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
        <% end %>
      </div>
    </div>
    <div>
      <% if current_user == @user %>
        <%= link_to 'ユーザー情報の編集', edit_user_path(@user), class: 'btn btn-secondary btn-block' %>
        <%= link_to 'ユーザーの退会', user_path(@user), method: :delete, data: { confirm: 'You sure?' }, class: 'btn btn-danger btn-block' %>
      <% end %>
    </div>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="#" class="nav-link">Posts</a></li>
      <li class="nav-item"><a href="#" class="nav-link">Followings</a></li>
      <li class="nav-item"><a href="#" class="nav-link">Followers</a></li>
    </ul>
  </div>
</div>